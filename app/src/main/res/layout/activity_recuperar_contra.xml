<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".login.LoginActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="2dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:src="@drawable/tdm_logo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Contraseña:" />

        <EditText
            android:id="@+id/editRecuperarContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/login_inputs"
            android:ems="8"
            android:inputType="textPassword"/>

        <TextView
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar contraseña:"/>
        <EditText
            android:id="@+id/editRecuperarConfirmarContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/login_inputs"
            android:ems="8"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnConfirmarRecuperar"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:backgroundTint="@color/login_inputs"
            android:text="confirmar" />
    </LinearLayout>
</LinearLayout>